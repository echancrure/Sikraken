{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Sikraken (Debug)",
            "type": "shell",
            "command": "./bin/sikraken.sh",
            "args": [
                "debug",
                "${input:algo}",
                "-m32",
                "${relativeFile}"
            ],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Compile Parser",
            "type": "shell",
            "command": "${workspaceFolder}/bin/compile_parser.sh",
            "group": {
                "kind": "build"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "runOptions": {
                "runOn": "default"
            }
        },
        {
            "label": "Call Parser",
            "type": "shell",
            "command": "${workspaceFolder}/bin/call_parser.sh",
            "args": [
                "${relativeFile}",
                "${input:debugFlag}"
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": [],
            "detail": "Preprocesses the current C file and then runs sikraken_parser on it."
        },
        {
            "label": "Run TestCov",
            "type": "shell",
            "command": "${workspaceFolder}/bin/run_testcov.sh",
            "args": [
                "${relativeFile}",
                "-32"
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": [],
            "detail": "Zip test input vectors and call TestCov"
        },
        {
            "label": "Get se_main predicate",
            "type": "shell",
            "command": "echo",
            "args": [
                "se_main(['${workspaceFolder}', '${fileDirname}', '${fileBasenameNoExtension}', main, debug, testcomp, '-m32', regression(1, 10)])"
            ],
            "group": {
                "kind": "build"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Parallel Regression Tests (GNOME Terminal)",
            "type": "shell",
            "command": "gnome-terminal",
            "args": [
                "--", "bash", "-lc",
                "cd '${workspaceFolder}' && /usr/bin/time -v '${workspaceFolder}/bin/run_regression_par.sh' '${input:parallelJobs}' 'regression_tests' '${input:shortcutGen}'; exec bash"
            ],
            "group": { "kind": "build" },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "never",        // don't pop open VS Code's integrated terminal
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "runOptions": {
                "runOn": "default"
            }
        },
        {
  "label": "Check Env",
  "type": "shell",
  "command": "echo 'DISPLAY=$DISPLAY' && echo 'DBUS=$DBUS_SESSION_BUS_ADDRESS'",
  "presentation": { "reveal": "always" }
},
{
    "label": "Smoke: Open Xterm (External Detached)",
    "type": "shell",
    // Use xterm, which is much simpler and less reliant on desktop libraries.
    "command": "setsid xterm -e \"/bin/bash -lc 'echo VS Code spawned me; exec /bin/bash'\" &",
    "presentation": { 
        "reveal": "never" 
    },
    "options": {
        "env": {
            // Still need to clear the Snap's library paths
            "LD_LIBRARY_PATH": "", 
            "GTK_PATH": "",       
            "GIO_MODULE_DIR": "",
            // Still need the display
            "DISPLAY": ":0" 
        }
    },
    "problemMatcher": []
}
,
        {
            "label": "Run Parallel Regression Tests",
            "type": "shell",
            "command": "/usr/bin/time",
            "args": [
                "-v",
                "${workspaceFolder}/bin/run_regression_par.sh",
                "${input:parallelJobs}",
                "regression_tests",
                "${input:shortcutGen}"
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "runOptions": {
                "runOn": "default"
            }
        },
        {
            "label": "Test Test-Comp Category",
            "type": "shell",
            "command": "${workspaceFolder}/SikrakenDevSpace/bin/test_category_sikraken.sh",
            "args": [
                "/home/chris/sv-benchmarks/c",
                "${input:category}",
                "${input:parallelJobs}",
                "${input:budget}",
                "${input:debugMode}",
                "${input:testcov}"                
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "runOptions": {
                "runOn": "default"
            }
        },
    ],
    "inputs": [
        {
            "id": "parallelJobs",
            "type": "promptString",
            "description": "Number of parallel jobs (e.g. 1, 4, 12, 18)",
            "default": "10"
        },
        {
            "id": "category",
            "type": "promptString",
            "description": "Benchmark category",
            "default": "ECA"
        },
        {
            "id": "testcov",
            "type": "pickString",
            "description": "Run TestCov after",
            "options": [
                "",        // blank TestCov will run 
                "-no_testcov"
            ],
            "default": "-no_testcov"
        },
        {
            "id": "budget",
            "type": "promptString",
            "description": "Enter the run budget timeout in seconds (e.g. 10, 30, 60, 900)",
            "default": "30"
        },
        {
            "id": "shortcutGen",
            "type": "pickString",
            "description": "Select shortcut_gen (optional)",
            "options": [
                "",        // blank = skip argument
                "-scg"
            ],
            "default": ""
        },
        {
            "id": "algo",
            "type": "promptString",
            "description": "Enter algorithm (e.g. budget[10], budget[30], regression[1,10])",
            "default": "budget[10]"
        },
        {
            "id": "debugFlag",
            "type": "pickString",
            "description": "Enable debug mode?",
            "options": ["", "-d"],
            "default": ""
        },
        {
            "id": "debugMode",
            "type": "pickString",
            "description": "Debug Mode",
            "options": ["debug", "release"],
            "default": "debug"
        }
    ]
}