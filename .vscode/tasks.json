{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Sikraken (Debug)",
            "type": "shell",
            "command": "./bin/sikraken.sh",
            "args": [
                "debug",
                "${input:algo}",
                "-m32",
                "${relativeFile}"
            ],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Compile Parser",
            "type": "shell",
            "command": "${workspaceFolder}/bin/compile_parser.sh",
            "group": {
                "kind": "build"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "runOptions": {
                "runOn": "default"
            }
        },
        {
            "label": "Call Parser",
            "type": "shell",
            "command": "${workspaceFolder}/bin/call_parser.sh",
            "args": [
                "${relativeFile}"
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": [],
            "detail": "Preprocesses the current C file and then runs sikraken_parser on it."
        },
        {
            "label": "Run TestCov",
            "type": "shell",
            "command": "${workspaceFolder}/bin/run_testcov.sh",
            "args": [
                "${relativeFile}",
                "-32"
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": [],
            "detail": "Zip test input vectors and call TestCov"
        },
        {
            "label": "Get se_main predicate",
            "type": "shell",
            "command": "echo",
            "args": [
                "se_main(['${workspaceFolder}', '${fileDirname}', '${fileBasenameNoExtension}', main, debug, testcomp, '-m32', regression(1, 10)])"
            ],
            "group": {
                "kind": "build"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Parallel Regression Tests",
            "type": "shell",
            "command": "/usr/bin/time",
            "args": [
                "-v",
                "${workspaceFolder}/bin/run_regression_par.sh",
                "8",
                "regression_tests",
                "${input:shortcutGen}"
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "runOptions": {
                "runOn": "default"
            }
        }
    ],
    "inputs": [
        {
            "id": "shortcutGen",
            "type": "pickString",
            "description": "Select shortcut_gen (optional)",
            "options": [
                "",        // blank = skip argument
                "-scg"
            ],
            "default": ""
        },
        {
            "id": "algo",
            "type": "promptString",
            "description": "Enter algorithm (e.g. budget[10], budget[30], regression[1,10])",
            "default": "budget[10]"
        }
    ]
}